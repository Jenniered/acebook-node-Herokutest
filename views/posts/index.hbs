<h1 class="posts">Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <div class="post"
  <li class="post-elements"><div class="post-text">{{this.message}}, {{this.firstname}}</div>
   <form class="button" id="delete-button" action="/posts/delete/{{ this.id }}" method="post">
      <button class="delete-button">Delete</button>
    </form>
    <form id="like-button" action="/posts/likes/{{this._id}}" method="post">
      <button class="like-button">Like</button> 
    </form>
    <div class="like-counter">{{this.likes}}</div>
  </li>
  {{/each}}
</ul>

<form>
<input class="new-post-link" type="submit" href="/posts/new" value="New post">
</form>





