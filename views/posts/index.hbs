<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li><div class="post-text">{{this.message}}, {{this.firstname}}</div>
    <form id="like-button" action="/posts/likes/{{this._id}}" method="post">
      <button class="like-button">Like</button> 
    </form>
    <div class="like-counter">{{this.likes}}</div>
    <form id="new-comment-form" action="/comments" method="post">
      <input type="text" value="" id="new-comment-text">
      <button class="comment-button">Comment</button>
    </form>
    <div class="comment-text">test</div>
  </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>





