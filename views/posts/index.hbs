<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}}, {{this.firstname}}
    <form id="like-button" action="/posts" method="post">
      <button class="like-button">Like</button> 
    </form>
    <div class="like-counter">{{this.likes}}</div>
  </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
